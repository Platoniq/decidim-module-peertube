<div class="item__edit-form">
  <%= decidim_form_for @form, html: { class: "form-defaults form" } do |f| %>
    <div class="card">
      <div class="card-section">
        <div class="form__wrapper">
          <div class="card-divider">
            <h2 class="card-title"><%= t(".title") %></h2>
          </div>
          <div class="card-section">
            <div class="row column">
              <%= f.text_field :username, label: t(".username") %>
            </div>
            <div class="row column">
              <%= f.password_field :password, label: t(".password") %>
            </div>
          </div>
        </div>
      </div>
      <div class="row column pt-4 pb-4">
        <div class="button button__sm button__secondary">
          <%= f.submit t(".submit") %>
        </div>
      </div>
    </div>
  <% end %>
</div>
