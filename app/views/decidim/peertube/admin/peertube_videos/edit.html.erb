<div class="card">
  <div class="card-divider flex">
    <div class="pr-4">
      <%= link_to main_component_path(current_component), class: "button button__sm button__secondary" do %>
        <%= icon "eye-line" %>
        <%= t(".visit") %>
      <% end %>
    </div>
    <div class="pr-4">
      <%= link_to edit_component_path, class: "button button__sm button__secondary" do %>
        <%= icon "image-line" %>
        <%= t(".embed") %>
      <% end %>
    </div>
    <% unless current_peertube_user_valid? %>
      <div class="pr-4">
        <%= link_to new_peertube_session_path, class: "button button__sm button__secondary" do %>
          <%= icon "account-circle-line" %>
          <%= t(".link_account") %>
        <% end %>
      </div>
    <% end %>
  </div>
</div>
<div class="card">
  <div class="card-divider">
    <h2 class="card-title">
      <%= t(".peertube_videos") %>
    </h2>
  </div>
  <%= render partial: "videos" %>
</div>
<% if current_peertube_user_valid? %>
  <div class="card">
    <div class="card-divider">
      <h2 class="card-title">
        <%= t(".account") %>
      </h2>
        <div class="flex pt-4 pb-4">
          <div class="button--title pr-4">
            <%= link_to peertube_sessions_path, method: :delete, class: "button button__sm button__secondary" do %>
              <%= icon "close-circle-line" %>
              <%= t(".remove_account") %>
            <% end %>
          </div>
          <div class="button--title">
            <%= link_to new_peertube_session_path, class: "button button__sm button__secondary" do %>
              <%= icon "account-circle-line" %>
              <%= t(".change_account") %>
            <% end %>
          </div>
        </div>
    </div>
    <div class="card-section">
      <dl>
        <dt>
          <h2 class="card-title"><%= t(".username") %>:</h2>
        </dt>
        <dd>
          <%= current_peertube_user.peertube_username %>
        </dd>
        <dt>
          <h2 class="card-title pt-4"><%= t(".channels") %>:</h2>
        </dt>
        <dd>
          <%= render partial: "channels" %>
        </dd>
      </dl>
    </div>
  </div>
<% end %>
